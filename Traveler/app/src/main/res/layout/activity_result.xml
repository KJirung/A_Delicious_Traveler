<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResultActivity">

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food name"
                android:textSize = "25dp"
                android:textColor = "@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/food_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food name2"
                android:textSize = "20dp"
                android:textColor = "@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                />

            <WebView
                android:id="@+id/webView"
                android:layout_width="395sp"
                android:layout_height="250sp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/info_recipe"
                android:text="Information"
                android:textSize = "20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/Chatbot"
                android:text="If you need more information, please use chatbot"
                android:textSize = "15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>

            <!-- 버튼 -->
            <android.widget.Button
                android:id="@+id/Chatbotbtn"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="140dp"

                android:text="Chatbot"
                android:background="@drawable/btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>



    </ScrollView>

</LinearLayout>